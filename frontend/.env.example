# twink.forsale Frontend Environment Configuration
# Copy this file to .env and fill in your actual values
# 
# ==========================================
# REQUIRED VARIABLES
# ==========================================

# Backend API URL (required)
# Development: http://localhost:5000
# Production: https://your-backend-domain.com
API_URL="http://localhost:5000"

# Backend API URL for client-side code (required)
# Must match API_URL - Vite requires VITE_ prefix for client-side access
VITE_API_URL="http://localhost:5000"

# ==========================================
# OPTIONAL VARIABLES
# ==========================================

# Public URL for ShareX configs (optional)
# If not set, will use the request origin
# PUBLIC_URL="https://twink.forsale"

# Node environment
# NODE_ENV="development"

# Port for frontend server (optional, defaults to 3000)
# PORT=3000

# Discord Webhook for system notifications (optional)
# DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."
